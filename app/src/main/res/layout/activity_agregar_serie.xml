<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".CategoriasAdmin.SeriesA.AgregarSerie">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TXT-->
            <TextView
                android:text="@string/NombreTXTSerie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <!-- TXT-->
            <TextView
                android:id="@+id/idSerie"
                android:text="@string/IdSerie"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- Nombre de la imagen -->
            <EditText
                android:id="@+id/NombreSerie"
                android:hint="@string/NombreSerie"
                android:inputType="textCapWords|textAutoCorrect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>

            <!-- Vista -->
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <!-- Icono-->
                <androidx.appcompat.widget.AppCompatImageView

                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:src="@drawable/vista_ico"/>

                <!-- Numero de vistas se inicializa en 0 -->
                <TextView
                    android:id="@+id/VistaSerie"
                    android:text="@string/VistaMusica"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <!-- Icono para abrir la galeria -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ImagenAgregarSerie"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/imagen_ico"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <!-- Boton par publicar imagen Serie -->
        <Button
            android:id="@+id/PublicarSerie"
            android:text="@string/PublicarSerie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_personalizado"
            android:textColor="#fff"
            android:layout_marginTop="10dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>



</RelativeLayout>