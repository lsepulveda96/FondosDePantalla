<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    app:cardBackgroundColor="#fff"
    app:cardUseCompatPadding="true"
    android:padding="0.2dp"
    app:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Imagen -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ImgCatFElegida"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

        <!-- Nombre de la imagen-->
        <TextView
            android:id="@+id/NombreImg_Cat_Elegida"
            android:text="@string/NombreImg_Cat_Elegida"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="18sp"
            android:textColor="#fff"
            android:background="#FA5882"
            android:gravity="center"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#FA5882"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/vista_ico_item"/>


            <!-- Vistas de la imagen-->
            <TextView
                android:id="@+id/Vista_Img_Cat_Elegida"
                android:layout_width="wrap_content"
                android:textColor="#fff"
                android:gravity="center"
                android:layout_marginStart="5dp"
                android:layout_height="25dp"
                android:text="@string/Vista_Img_Cat_Elegida"/>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>